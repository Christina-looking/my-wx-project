/* pages/detail/detail.wxss */
.box {
  font-family: "微软雅黑"；;
}

.banner image {
  width: 100%;
}

.goods-mes .goods-zh {
  border-top: 1px solid #ccc;
}

.goods-mes .goods-zh view {
  padding: 10px 5px;
}
/* 产品名称 */
.goods-mes .goods-zh .goods-name,.product-math text,.product-price text {
  font-size: 28rpx;
  font-weight: 600;
}
/* 产品价格 */
.goods-mes .goods-zh .goods-price {
  color: orangered;
  font-size: 26rpx;
}
/* 库存  运费 */
.goods-zh.ku{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 26rpx;
}
.goods-zh .goods-yunfei{
  margin-right: 100rpx;
}
/* 产品评价 */
.goods-pingjia {
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
}
/* 有图外层 */
.goods-pingjia .dengji {
  display: flex;
  font-size: 24rpx;
  flex-direction: row;
  justify-content: space-around;
}
/* 宝贝评价 */
.goods-pingjia .pingjia {
  padding: 10px 5px;
  display: inline-block;
  font-size: 26rpx;
}
/* 有图背景样式 */
.goods-pingjia .dengji .dengji-style {
  width: 80px;
  height: 30px;
  background-color: #eee;
  margin-left: 5px;
  text-align: center;
  line-height: 30px;
}
/* 产品详情样式 */
.goods-text .header {
  padding: 10px 5px;
  font-size: 28rpx;
}
/*产品详情内容样式  */
.goods-text .detail {
  text-align: center;
  padding: 10px 20rpx;
  font-size: 26rpx;
  line-height: 24px;
}
/* 详情图片 */
.goods-img{
  display: flex;
  flex-direction: row;
  justify-content: center;
}
/* 按钮样式 */
.goods-shopping .shopping-btn {
  display: flex;
  justify-content: space-around;
  position: fixed;
  bottom: 0;
  width: 100%;
  color: #fff;
}

.goods-shopping .shopping-btn button {
  flex-basis: 45%;
}
.goods-shopping .product-mes {
  display: flex;
  justify-content: space-around;
}

.product-price {
  margin-left: 20%;
}

.goods-shopping .product-mes image {
  flex-basis: 10%;
}

.goods-shopping .product-mes text {
  margin: 5px 10px;
  font-size: 12px;
}
/* 评价选中字样式 */
.red{
  color: orangered;
}
.defalut{
  color: black;
}
/* 没有评价内容 */

.no{
  font-size: 24rpx;
  display: block;
  text-align: center;
  margin: 30rpx 0 10rpx 0;
  color: rgb(139, 135, 135);
}
/* 默认按钮样式 */
.red1{
  background-color: orangered;
  color:#fff;
  font-size: 28rpx;
}
.green{
  background-color: rgb(22, 158, 22);
  color: #fff;
  font-size: 30rpx;
}
/* 关闭样式 */
.goods-shopping .product-mes .close {
  flex-basis: 10%;
  margin-left: 60rpx;
 font-size: 30rpx;

}

.goods-shopping .product-math {
  display: flex;
  margin-top: 20rpx;
  margin-bottom:  20rpx;
  padding-bottom: 20rpx;
}

.text-one,.product-math {
  border-bottom: 1px solid #ccc;
}
.text-one,.product-math text,.text-one,.product-math .product-sl{
   margin-top: 10px;
   margin-left: 10px;
}
.product-math .normal{
  color: black
}
.product-math .disabled{
  color: red;
}
.product-math input{
  width: 40px;
  height: 26px;
  text-align: center;
  font-size: 12px;
}
.product-math button{
  border: 1px solid #ccc;
}
/*model  */

.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

.commodity_attr_box {
  width: 100%;
  height: 200px;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  padding-top: 20rpx;
}
