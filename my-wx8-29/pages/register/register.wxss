/* pages/register/register.wxss */

page{
height: 100%;
}
.container {
height: 100%;
display: flex;
flex-direction: column;
padding: 0;
box-sizing: border-box;
background-color: #fff
}
/*表单内容*/
.login-from {
margin-top: 0rpx;
flex: auto;
height:100%;
}
/* view */
.inputView {
display: flex;
flex-direction: row;
justify-content: flex-start;
background-color: #fff;
line-height: 70rpx;
border-bottom: 2rpx solid #eee;
font-size: 24rpx;
}

/*label  */
.loginLab {
margin: 20rpx 20rpx 20rpx 10rpx;
color: #545454;
font-size: 28rpx;
}
/* input */
.inputText {
flex: block;
margin-top: 30rpx;
color: #cccccc;
font-size: 14px
}
/* 返回登陆文字 */
.login-from .return-login{
  display: flex;
  flex-direction: row;
  justify-content:flex-end;
}
navigator{
  margin-top: 20rpx;
  font-size: 28rpx;
  color: rgb(11, 223, 64);
}
/*按钮*/
.loginBtnView {
width: 100%;
height: auto;
}
.loginBtn {
width: 80%;
margin-top: 30rpx;
border-top-color: 2rpx solid #eee;
}
.button{
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  margin-top: 20rpx;
}

/* 登陆成功 */
.cheer{
  text-align: center;
  line-height: 400rpx;
  font-size: 60rpx;
  position: relative;
}
/* 返回首页 */
.return{
  margin: 20rpx;
 
}
