/* pages/shoping/shoping.wxss */

.box{
  font-family: "微软雅黑"；
}
.banner image{
  width: 100%;
}
/* 商家选择导航 */
.btn-nav{
  display: flex;
  justify-content: space-around;
  margin-top: 30rpx;
}
/* 选中颜色 */
.red{
  color: red;
  font-size: 30rpx;
}
/* 默认样式 */
.default{
  font-size: 30rpx;
}
/* 销量样式 */
.grey{
  color: rgb(121, 117, 117);
}

.productList{
  display: flex;
   justify-content: space-around; 
   flex-wrap: wrap;
}
.productList .productDetail{
  flex-basis: 45%;
  font-size: 12px;
  line-height: 24px;
  margin-top: 30rpx;
}
/* 商品图片大小 */
.productList .productDetail image{
  width: 100%;
  height: 200rpx;
}

/* 价格 */
.product-price{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 26rpx;
}
.product-price text{
  color: orangered;
}

/* 价格栏购物车 */
.productList .product-price image{
  width: 30px;
  height: 25px;
}
 .xfk{
  position: fixed;
  bottom: 40px;
  right: 0;
  } 
.xfk .fk1{
  width: 40px;
  height:40px;
 background-color: rgba(0,0,0,.5);
 border-bottom: 1px solid #FFFFFF;
 text-align: center;

}
.xfk .fk1 image{
  width: 20px;
  height:20px;
  padding: 10px;
}

